set nocompatible

syntax enable
filetype plugin indent on

set showcmd
set showmode

set backspace=indent,eol,start

set hidden

set wildmenu
set wildmode=list:longest

set number
set ruler

set nowrap

set hlsearch
set incsearch
set showmatch

set visualbell

set cursorline
set laststatus=2
set list
set listchars=trail:.,tab:>-,eol:$

set ignorecase
set smartcase

set statusline=%F%m%r%h%w[%L][%{&ff}]%y[%p%%][%04l,%04v]


set expandtab
set softtabstop=2
set shiftwidth=2
set tabstop=2
set autoindent

set foldenable

